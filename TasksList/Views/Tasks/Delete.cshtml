@model TasksList.Models.Task

@{
    ViewData["Title"] = "Usuń";
}

<h1>Usuń</h1>

<h3>Jesteś pewien?</h3>
<div>
    <h4>Zadanie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Treść
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class = "col-sm-2">
            Notatka
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Note)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Wróć do listy</a>
    </form>
</div>
